<h1>Lista de eventos</h1>

<table>
  <thead>
    <tr>
      <th>J</th>
      <th>F</th>
      <th>M</th>
      <th>A</th>
      <th>M</th>
      <th>J</th>
      <th>J</th>
      <th>A</th>
      <th>S</th>
      <th>O</th>
      <th>N</th>
      <th>D</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.january %></td>
        <td><%= event.february %></td>
        <td><%= event.march %></td>
        <td><%= event.april %></td>
        <td><%= event.may %></td>
        <td><%= event.june %></td>
        <td><%= event.july %></td>
        <td><%= event.august %></td>
        <td><%= event.september %></td>
        <td><%= event.october %></td>
        <td><%= event.november %></td>
        <td><%= event.december %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

